              ]
            }
          },
          "typeVersion": 1
        },
        {
          "id": "fcc08d0d-33ea-427c-bdea-2e219baa7191",
          "name": "Is Online",
          "type": "n8n-nodes-base.if",
          "position": [
            -160,
            240
          ],
          "parameters": {
            "options": {},
            "conditions": {
              "options": {
                "version": 2,
                "leftValue": "",
                "caseSensitive": true,
                "typeValidation": "strict"
              },
              "combinator": "and",
              "conditions": [
